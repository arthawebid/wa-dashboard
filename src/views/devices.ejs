<h3>Devices</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Session</th>
      <th>Webhook</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% devices.forEach(device => { %>
      <tr>
        <td><%= device.id %></td>
        <td><%= device.session %></td>
        <td><%= device.webhook_url || '-' %></td>
        <td>
          <span class="badge <%= device.is_active ? 'bg-success' : 'bg-danger' %>">
            <%= device.is_active ? 'Active' : 'Inactive' %>
          </span>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
